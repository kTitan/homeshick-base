# add directory to the end of the path
# Source: http://superuser.com/questions/39751/add-directory-to-path-if-its-not-already-there
path_add_to_begin() {
	if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
		PATH="$1${PATH:+":$PATH"}"
	fi
}
path_add_to_end() {
	if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
		PATH="${PATH:+"$PATH:"}$1"
	fi
}

